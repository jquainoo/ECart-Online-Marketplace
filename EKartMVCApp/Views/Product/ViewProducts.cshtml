@model IEnumerable<EKartMVCApp.Models.Product>

@{
    ViewBag.Title = "View All Products";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
}
<div class="col-md-3">
</div>
<div class="col-md-7">
    <h1><b>All Products</b></h1>
    &nbsp;
</div>
<h4>Welcome: @Session["username"]</h4>
<b>@Html.ActionLink("Update Customer Details", "UpdateCustomerDetails", "Customer")</b> ||
<b>@Html.ActionLink("Change Password", "ChangePassword", "Customer")</b> ||
<b class="text-center">@Html.ActionLink("Cart", "GetCart", "Product")</b> ||
<b>@Html.ActionLink("Recent Orders", "GetRecentPurchases", "Purchase")</b>
<hr />
<p><h4>@Html.ActionLink("Back To All Category", "ViewCategories", "Category")</h4></p>
<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityAvailable)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantityAvailable)
        </td>
        <td>
            @Html.ActionLink("Add To Cart", "AddToCart", "Product", new { id = item.ProductId }, null) |
            @Html.ActionLink("Product Details", "ProductDetails", new { id=item.ProductId }, null)
        </td>
    </tr>
}
</table>
